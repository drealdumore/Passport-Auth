extends layout

block content

    div(class='row my-3')
        div(class='col-12')
            h1 Connect email account
            
            if message.length > 0
                .alert.alert-danger #{message}
            
            form(action='/connect/local', method='post')
                .form-group
                    label Email
                    input.form-control(type="email",name="email",required)
                .form-group
                    label Password
                    input.form-control(type="password",name="password",required)
                
                button.btn.btn-success(type='submit') Connect